@model ProyectoRRHH.Models.capacitacione

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var mensaje = TempData["Mensaje"] as string;

}
<br />
<h1 class="text-center bg-secondary-subtle">Capacitaciones</h1>
@if (!string.IsNullOrEmpty(mensaje))
{
    <div class="alert alert-info">@mensaje</div>
}
<hr />
<div class="row">
    <div class="mx-auto col-10 col-md-8 col-lg-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Cédula</label>
                <select asp-for="candidato_id" class="form-control" asp-items="ViewBag.candidato_id"></select>
                <span asp-validation-for="candidato_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Descripción</label>
                <input asp-for="descripcion" class="form-control" />
                <span asp-validation-for="descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nivel</label>
                <select asp-for="nivel" class="form-control">
                    <option value="">-Selecciona-</option>
                    <option value="Bachiller">Curso</option>
                    <option value="Bachiller">Bachiller</option>
                    <option value="Técnico">Técnico</option>
                    <option value="Grado">Grado</option>
                    <option value="Postgrado">Postgrado</option>
                    <option value="Maestría">Maestría</option>
                    <option value="Doctorado">Doctorado</option>
                </select>
                <span asp-validation-for="nivel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fecha Desde</label>
                <input asp-for="fechadesde" class="form-control" type="date" />
                <span asp-validation-for="fechadesde" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fecha Hasta</label>
                <input asp-for="fechahasta" class="form-control" type="date" />
                <span asp-validation-for="fechahasta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Institución</label>
                <input asp-for="institucion" class="form-control" />
                <span asp-validation-for="institucion" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                    <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">Finalizar</a>
           </div>
        </form>
    </div>
</div>

