@model ProyectoRRHH.Models.capacitacione

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>

<h4>Capacitaciones</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label class="control-label">Cédula</label>
                <select asp-for="candidato_id" class="form-control" asp-items="ViewBag.candidato_id"></select>
                <span asp-validation-for="candidato_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Descripción</label>
                <input asp-for="descripcion" class="form-control" />
                <span asp-validation-for="descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nivel</label>
                <input asp-for="nivel" class="form-control" />
                <span asp-validation-for="nivel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fecha Desde</label>
                <input asp-for="fechadesde" class="form-control" type="datetime" />
                <span asp-validation-for="fechadesde" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fecha Hasta</label>
                <input asp-for="fechahasta" class="form-control" type="datetime" />
                <span asp-validation-for="fechahasta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Institución</label>
                <input asp-for="institucion" class="form-control" />
                <span asp-validation-for="institucion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-warning" />
                <a asp-action="Index" class="btn btn-primary">Volver</a>
            </div>
        </form>
    </div>
</div>

