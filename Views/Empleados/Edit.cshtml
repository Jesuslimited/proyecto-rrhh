@model ProyectoRRHH.Models.empleado

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>

<h4>Empleado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label class="control-label">Cédula</label>
                <select asp-for="cedula" id="cedulaDropDownList" class="form-control" asp-items="ViewBag.cedula"></select>
                <span asp-validation-for="cedula" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Nombre</label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fecha de ingreso</label>
                <input asp-for="fechaingreso" class="form-control" type="datetime" />
                <span asp-validation-for="fechaingreso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Departamento</label>
                <select asp-for="departamento" class="form-control" asp-items="ViewBag.departamento"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Puesto</label>
                <select asp-for="puesto" class="form-control" asp-items="ViewBag.puesto"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Salario mensual</label>
                <input asp-for="salariomensual" class="form-control" />
                <span asp-validation-for="salariomensual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Estado</label>
                <select asp-for="estado" class="form-control">
                    <option value="">-Selecciona-</option>
                    <option value="Activo">Activo</option>
                    <option value="Inactivo">Inactivo</option>
                </select>
                <span asp-validation-for="estado" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-primary">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPArtial");
    }
    <script>
        $("#cedulaDropDownList").select2({
            theme: "bootstrap"
        })
    </script>

    <script>
        function validateDate(input) {
            var dateValue = input.value;
            if (dateValue !== "") {
                var date = new Date(dateValue);
                if (isNaN(date.getTime())) {
                    input.value = "";
                    alert("Fecha inválida. Por favor, ingrese una fecha válida.");
                }
            }
        }
    </script>
}