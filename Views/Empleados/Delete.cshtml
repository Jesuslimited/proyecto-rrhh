@model ProyectoRRHH.Models.empleado

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar</h1>
<div class="alert alert-danger" role="alert">
    Si eliminas este empleado, se elimininará de forma permanente.
</div>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt class="col-sm-2">
            Cédula
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.cedulaNavigation.cedula)
        </dd>
        <dt class="col-sm-2">
            Fecha de ingreso
        </dt>
        <dd class="col-sm-10">
            @{
                var fechaingreso = ((DateTime)Model.fechaingreso).ToString("dd/MM/yyyy");
            }
            @fechaingreso
        </dd>

        <dt class = "col-sm-2">
            Salario mensual
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.salariomensual)
        </dd>
        <dt class = "col-sm-2">
            Estado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.estado)
        </dd>
        <dt class = "col-sm-2">
            Departamento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.departamentoNavigation.departamento1)
        </dd>
        <dt class = "col-sm-2">
            Puesto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.puestoNavigation.nombre)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Volver</a>
    </form>
</div>
